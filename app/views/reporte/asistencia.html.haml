/ Dashboard wrapper start
.dashboard-wrapper
  / Page title start
  .row.page-title
    %h2
      Asistencia
      %small
        %li Home
        %li /
        %li Reportes
        %li /
        %li Asistencia
  / Page title end
  / Row start
  .row
    .col-md-12
      .widget
        .row
          .col-md-12.col-sm-12
            .widget
              .widget-header
                .title 
                  %span.fs1{"aria-hidden" => "true", "data-icon" => ""}
                    Reporte
              .widget-body
                %form#form_asistencia.form-horizontal{name: "form_asistencia", method: "post"}
                  .form-group
                    %label.col-lg-2.control-label{for: "servicio"} Fecha
                    .col-lg-10
                      .row
                        .col-lg-2.col-sm-2
                          %input#fecha1.datepicker.form-control{name: "fecha1", type: "text"}
                        %label.col-lg-1.col-sm-1.checkbox-inline{style:"text-align:center;"}
                          Al
                        .col-lg-2.col-sm-2
                          %input#anio.datepicker.form-control{name: "anio", type: "text"}
                        .col-lg-2.col-sm-2
                          %button#btnGenerar_asistencia.btn.btn-success{type: "button", name: "btnGenerar_asistencia"} 
                            Generar
        .row
          .col-md-12.col-sm-12
            .widget
              .widget-header
                .title
                  %span.fs1{"aria-hidden" => "true", "data-icon" => ""}
                  Reporte de Asistencia Por Servicio
              %table#table_asitencia_serv.data-table.table.table-condensed.table-striped.table-hover.table-bordered.pull-left
                %thead
                  %tr
                    %th SERVICIOS
                    %th Fecha 1
                    %th Fecha 2
                    %th Fecha 3
                    %th Total
                %tbody
                  %tr
                    %th Culto Principal
                    %td 100
                    %td 200
                    %td 300
                    %td 600
                  %tr
                    %th Reu de Jóvenes
                    %td 100
                    %td 200
                    %td 300
                    %td 600
                  %tr
                    %th Reu de los Martes
                    %td 100
                    %td 200
                    %td 300
                    %td 600
                  %tr
                    %th Reu de los Lunes
                    %td 100
                    %td 200
                    %td 300
                    %td 600
                  %tr
                    %th Total
                    %td 300
                    %td 600
                    %td 900
        .row
          .col-md-12.col-sm-12
            .widget
              .widget-header
                .title
                  %span.fs1{"aria-hidden" => "true", "data-icon" => ""}
                  Reporte de Asistencia Por Categoria Por Servicio
              %table#table_asitencia_cat_serv.data-table.table.table-condensed.table-striped.table-hover.table-bordered.pull-left
                %thead
                  %tr
                    %th{"colspan" => "2"} SERVICIOS/CATEGORÍA
                    %th Fecha 1
                    %th Fecha 2
                    %th Fecha 3
                %tbody
                  %tr
                    %th{"rowspan" => "5"} Culto Principal
                    %th Mujeres Jóvenes
                    %td 100
                    %td 200
                    %td 300
                  %tr
                    %th Hombres Jóvenes
                    %td 100
                    %td 200
                    %td 300
                  %tr
                    %th Mujeres
                    %td 100
                    %td 200
                    %td 300
                  %tr
                    %th Hombres
                    %td 100
                    %td 200
                    %td 300
                  %tr
                    %th Total
                    %td 300
                    %td 600
                    %td 900
        .row
          .col-md-12.col-sm-12
            .widget
              %button#btnImprimir.btn.btn-default{type: "button", name: "btnImprimir"}
                %span.fs1{"aria-hidden" => "true", "data-icon" => ""} 
                Imprimir
              %button#btnReporte.btn.btn-success{type: "button", name: "btnReporte"}
                %span.fs1{"aria-hidden" => "true", "data-icon" => ""} 
                Reporte Excel
- content_for :bloquecss do
  = stylesheet_link_tag "datepicker/css/datepicker.css"
  = stylesheet_link_tag "mapa/jquery-gmaps-lation-picker"
  = stylesheet_link_tag "smooth/jquery-ui-1.8.16.custom"
  = stylesheet_link_tag "loader"
  = stylesheet_link_tag "successblock"
  = stylesheet_link_tag "jqueryvalidation/css/validationEngine.jquery.css"
- content_for :bloquejavascript do
  = javascript_include_tag "https://maps.googleapis.com/maps/api/js?sensor=true"
  = javascript_include_tag :configuracion
  :javascript
    $('##{$mactive} > span').addClass('current-arrow');