/ Dashboard wrapper start
.dashboard-wrapper
  / Page title start
  .row.page-title
    %h2
      Servicios
      %small
        %li Home
        %li /
        %li Servicios
  / Page title end
  / Row start
  .row
    = render 'layouts/mensaje'
    #accordion.col-md-12
      .widget
        .widget-header
          %a.btn.btn-primary.btn-block.collapsed{"data-parent" => "#accordion", "data-toggle" => "collapse", href: "#servicio"}
            Agregar Servicio
        #servicio.panel-collapse.collapse
          .widget-body
            = form_tag(configuracion_guardar_servicio_path , {:method=>'post',:class=>'form-horizontal'}) do
              .form-group
                %label.col-lg-2.control-label{for: "tipo"} Tipo
                .col-lg-10
                  .row
                    .col-lg-2
                      %select#tipo.form-control{name: "tipo"}
                        %option{value: "1"} Culto General
                        %option{value: "2"} Culto Jovenes
                    %label.col-lg-2.control-label{for: "nombre"} Nombre
                    .col-lg-3
                      %input#nombre.form-control{name: "nombre", type: "text"}/
              .form-group
                %label.col-lg-2.control-label{for: "dia"} Día
                .col-lg-10
                  .row
                    .col-lg-2
                      %input#dia.form-control.datepicker{type: "text", placeholder: "Lunes" }
                    %label.col-lg-2.control-label{for: "hora"} Hora
                    .col-lg-1
                      %input#hora.form-control{type: "text"}
                    .col-lg-2
                      %button#addhorario.btn.btn-default{type: "button"} +
              #dt_example.example_alt_pagination.col-lg-7.col-lg-offset-2
                %table#horario.table.table-condensed.table-striped.table-hover.table-bordered.pull-left
                  %thead
                    %tr
                      %th{style: "width:33%"} Dia
                      %th{style: "width:33%"} Hora
                      %th{style: "width:33%"} Acciones
                  %tbody
              .form-group
                .col-lg-offset-2.col-lg-10
                  %button.btn.btn-default{type: "button"} Cancelar
                  = submit_tag 'Guardar', :class=>'btn btn-success'
  / Row end
