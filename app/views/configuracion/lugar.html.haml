/ Dashboard wrapper start
.dashboard-wrapper
  / Page title start
  .row.page-title
    %h2
      Lugar
      %small
        %li Home
        %li /
        %li Lugar
  / Page title end
  / Row start
  .row
    .col-md-12
      .widget
        .widget-body
          .row
            .col-md-6.col-sm-6
              .panel.panel-primary.no-margin
                .panel-heading
                  %h3.panel-title 
                    %span.fs1{"aria-hidden" => "true", "data-icon" => ""}
                    Lista de Lugares
                .panel-body
                  #dt_example.example_alt_pagination
                    %table#lugartable.table.table-condensed.table-striped.table-hover.table-bordered.pull-left
                      %thead
                        %tr
                          %th{style: "width:20%"} ID
                          %th{style: "width:60%"} Descripción
                          %th.hidden-phone{style: "width:20%"} Acciones
                      %tbody
                    .clearfix
            .col-md-6.col-sm-6
              .panel.panel-primary.no-margin
                .panel-heading
                  %h3.panel-title 
                    %span.fs1{"aria-hidden" => "true", "data-icon" => ""}
                    Registrar Lugar
                .panel-body
                  %form#form_lugar.form-horizontal{role: "form"}
                    .form-group
                      %label.col-lg-2.control-label{for: "descripcion"} Descripción
                      .col-lg-10
                        %input#descripcion.form-control{name: "descripcion", type: "text"}
                    .form-group
                      .col-lg-offset-2.col-lg-10
                        %button.btn.btn-default{type: "button"} Cancelar
                        %button#btnGuardar_Lugar.btn.btn-success{type: "button"} Guardar
  / Row end
- content_for :bloquejavascript do
  = javascript_include_tag :lugar