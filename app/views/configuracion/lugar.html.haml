/ Dashboard wrapper start
.dashboard-wrapper
  / Page title start
  .row.page-title
    %h2
      Lugar
      %small
        %li Home
        %li /
        %li Lugar
  / Page title end
  / Row start
  .row
    .col-md-12
      .widget
        .widget-body
          .row
            .col-md-6.col-sm-6
              .panel.panel-primary.no-margin
                .panel-heading
                  %h3.panel-title 
                    %span.fs1{"aria-hidden" => "true", "data-icon" => ""}
                    Lista de Lugares
                .panel-body
                  #dt_example.example_alt_pagination
                    %table#lugartable.table.table-condensed.table-striped.table-hover.table-bordered.pull-left
                      %thead
                        %tr
                          %th{style: "width:20%"} ID
                          %th{style: "width:60%"} Descripción
                          %th.hidden-phone{style: "width:20%"} Acciones
                      %tbody
                        %tr.gradeX
                          %td John
                          %td.hidden-phone $22590
                          %td.hidden-phone
                            %a.actions-icons{href: "#"}
                              %img.icons{alt: "edit", src: "http://d9i0z8gxqnxp1.cloudfront.net/img/edit-icon.png"}/
                            %a.delete-row{"data-original-title" => "Delete", href: "#"}
                              %img{alt: "trash", src: "http://d9i0z8gxqnxp1.cloudfront.net/img/trash-icon.png"}/
                        %tr.gradeA
                          %td Ruchita
                          %td.hidden-phone $98450
                          %td.hidden-phone
                            %a.actions-icons{href: "#"}
                              %img.icons{alt: "edit", src: "http://d9i0z8gxqnxp1.cloudfront.net/img/edit-icon.png"}/
                            %a.delete-row{"data-original-title" => "Delete", href: "#"}
                              %img{alt: "trash", src: "http://d9i0z8gxqnxp1.cloudfront.net/img/trash-icon.png"}/
                        %tr.gradeU
                          %td Barote babu
                          %td.hidden-phone $99876
                          %td.hidden-phone
                            %a.actions-icons{href: "#"}
                              %img.icons{alt: "edit", src: "http://d9i0z8gxqnxp1.cloudfront.net/img/edit-icon.png"}/
                            %a.delete-row{"data-original-title" => "Delete", href: "#"}
                              %img{alt: "trash", src: "http://d9i0z8gxqnxp1.cloudfront.net/img/trash-icon.png"}/
                    .clearfix
            .col-md-6.col-sm-6
              .panel.panel-primary.no-margin
                .panel-heading
                  %h3.panel-title 
                    %span.fs1{"aria-hidden" => "true", "data-icon" => ""}
                    Registrar Lugar
                .panel-body
                  %form#form_lugar.form-horizontal{role: "form"}
                    .form-group
                      %label.col-lg-2.control-label{for: "descripcion"} Descripción
                      .col-lg-10
                        %input#descripcion.form-control{name: "descripcion", type: "text"}
                    .form-group
                      .col-lg-offset-2.col-lg-10
                        %button.btn.btn-default{type: "button"} Cancelar
                        %button#btnGuardar_Lugar.btn.btn-success{type: "button"} Guardar
  / Row end
  - content_for :bloquejavascript do
    = javascript_include_tag :servicios