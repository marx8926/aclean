/ Dashboard wrapper start
.dashboard-wrapper
  / Page title start
  .row.page-title
    %h2
      Lugar
      %small
        %li Home
        %li /
        %li Lugar
  / Page title end
  / Row start
  .row
    .col-md-12
      .widget
        .widget-body
          .row
            .col-md-6.col-sm-6
              .panel.panel-primary.no-margin
                .panel-heading
                  %h3.panel-title 
                    %span.fs1{"aria-hidden" => "true", "data-icon" => ""}
                    Lista de Lugares
                .panel-body
                  #dt_example.example_alt_pagination
                    %table#data-table.table.table-condensed.table-striped.table-hover.table-bordered.pull-left
                      %thead
                        %tr
                          %th{style: "width:20%"} ID
                          %th{style: "width:60%"} Descripción
                          %th.hidden-phone{style: "width:20%"} Acciones
                      %tbody
                        %tr.gradeX
                          %td John
                          %td.hidden-phone $22590
                          %td.hidden-phone
                            %a.actions-icons{href: "#"}
                              %img.icons{alt: "edit", src: "http://d9i0z8gxqnxp1.cloudfront.net/img/edit-icon.png"}/
                            %a.delete-row{"data-original-title" => "Delete", href: "#"}
                              %img{alt: "trash", src: "http://d9i0z8gxqnxp1.cloudfront.net/img/trash-icon.png"}/
                        %tr.gradeA
                          %td Ruchita
                          %td.hidden-phone $98450
                          %td.hidden-phone
                            %a.actions-icons{href: "#"}
                              %img.icons{alt: "edit", src: "http://d9i0z8gxqnxp1.cloudfront.net/img/edit-icon.png"}/
                            %a.delete-row{"data-original-title" => "Delete", href: "#"}
                              %img{alt: "trash", src: "http://d9i0z8gxqnxp1.cloudfront.net/img/trash-icon.png"}/
                        %tr.gradeU
                          %td Barote babu
                          %td.hidden-phone $99876
                          %td.hidden-phone
                            %a.actions-icons{href: "#"}
                              %img.icons{alt: "edit", src: "http://d9i0z8gxqnxp1.cloudfront.net/img/edit-icon.png"}/
                            %a.delete-row{"data-original-title" => "Delete", href: "#"}
                              %img{alt: "trash", src: "http://d9i0z8gxqnxp1.cloudfront.net/img/trash-icon.png"}/
                    .clearfix
            .col-md-6.col-sm-6
              .panel.panel-primary.no-margin
                .panel-heading
                  %h3.panel-title 
                    %span.fs1{"aria-hidden" => "true", "data-icon" => ""}
                    Registrar Lugar
                .panel-body
                  
  / Row end
  / Row start
  .row
    #accordion.col-md-12
      .widget
        .widget-header
          %a.btn.btn-primary.btn-block.collapsed{"data-parent" => "#accordion", "data-toggle" => "collapse", href: "#servicio"}
            Agregar Servicio
        #servicio.panel-collapse.collapse
          .widget-body
            = form_tag(configuracion_guardar_servicio_path , {:method=>'post',:class=>'form-horizontal'}) do
              .form-group
                %label.col-lg-2.control-label{for: "tipo"} Tipo
                .col-lg-10
                  %select#tipo.form-control{name: "tipo"}
                    %option{value: "1"} Culto General
                    %option{value: "2"} Culto Jovenes

              .form-group
                %label.col-lg-2.control-label{for: "nombre"} Nombre
                .col-lg-10
                  %input#nombre.form-control{name: "nombre", type: "text"}/
              .form-group
                %label.col-lg-2.control-label{for: "dia"} Día
                .col-lg-10
                  %input#dia.form-control.datepicker{type: "text", placeholder: "Lunes" }/
              .form-group
                %label.col-lg-2.control-label{for: "hora"} Hora
                .col-lg-10
                  %input#hora.form-control{type: "text", placeholder: "12:00:00" }/
              .form-group
                .col-lg-offset-2.col-lg-10
                  = submit_tag 'Guardar', :class=>'btn btn-primary'
  / Row end
  / Row start
  .row
    .col-md-12
      .widget
        .widget-header
          .title
            %span.fs1{"aria-hidden" => "true", "data-icon" => ""}
            Lista de Servicios
        .widget-body
          
  / Row end